<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:tools="http://schemas.android.com/tools">

    <!--요일-->
    <LinearLayout
        android:id="@+id/home_month_daytitle_layout"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/tv_body_b_12"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="sun" />
        <TextView
            style="@style/tv_body_b_12"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="mon"
            android:layout_marginStart="20dp"/>
        <TextView
            style="@style/tv_body_b_12"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="tue"
            android:layout_marginStart="20dp"/>
        <TextView
            style="@style/tv_body_b_12"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="wed"
            android:layout_marginStart="20dp"/>
        <TextView
            style="@style/tv_body_b_12"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="thu"
            android:layout_marginStart="20dp"/>
        <TextView
            style="@style/tv_body_b_12"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="fri"
            android:layout_marginStart="20dp"/>
        <TextView
            style="@style/tv_body_b_12"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="sat"
            android:layout_marginStart="20dp"/>


    </LinearLayout>

    <!--일-->
    <LinearLayout
        android:id="@+id/home_month_cal_layout"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/home_month_daytitle_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_month_cal_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_home_month"
            android:adjustViewBounds="true"
            app:layout_constrainedHeight="true"
            app:spanCount="7" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>