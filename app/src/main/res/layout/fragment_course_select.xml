<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.course.CourseSelectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/course_select_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="147dp"
            android:padding="10dp"
            android:text="@string/action_cancel"
            android:textAppearance="@style/tv_subtitle_b_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/course_select_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="157dp"
            android:text="@string/title_specify_which_courses_to_share"
            android:textAppearance="@style/tv_headline_eb_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/course_select_next_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="147dp"
            android:padding="10dp"
            android:text="@string/action_next"
            android:textAppearance="@style/tv_subtitle_b_16"
            android:textColor="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/course_select_explanation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="@string/msg_course_select_explanation"
            android:textAppearance="@style/tv_caption_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_select_title_tv" />

        <com.innovattic.rangeseekbar.RangeSeekBar
            android:id="@+id/course_select_rsb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:rsb_max="100"
            app:rsb_maxThumbDrawable="@drawable/ic_end_marker"
            app:rsb_minRange="0"
            app:rsb_minThumbDrawable="@drawable/ic_start_marker"
            app:rsb_sidePadding="0dp"
            app:rsb_trackColor="@color/transparent"
            app:rsb_trackSelectedColor="@color/transparent" />

        <View
            android:id="@+id/course_select_bar_white_view"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_course_select_bar"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/course_select_bar_white_dark_view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginHorizontal="28dp"
            android:background="@drawable/bg_course_unselected_bar"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/course_select_bar_white_view"
            app:layout_constraintTop_toTopOf="@+id/course_select_bar_white_view" />

        <View
            android:id="@+id/course_select_bar_primary_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_course_selected_bar"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/course_select_bar_white_dark_view"
            app:layout_constraintEnd_toEndOf="@+id/course_select_bar_white_dark_view"
            app:layout_constraintStart_toStartOf="@+id/course_select_bar_white_dark_view"
            app:layout_constraintTop_toTopOf="@+id/course_select_bar_white_dark_view" />

        <ImageView
            android:id="@+id/course_select_start_circle_marker_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:elevation="4dp"
            android:src="@drawable/ic_start_circle_marker"
            app:layout_constraintBottom_toBottomOf="@+id/course_select_bar_primary_view"
            app:layout_constraintStart_toStartOf="@+id/course_select_bar_primary_view"
            app:layout_constraintTop_toTopOf="@+id/course_select_bar_primary_view" />

        <ImageView
            android:id="@+id/course_select_end_circle_marker_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:elevation="4dp"
            android:src="@drawable/ic_end_circle_marker"
            app:layout_constraintBottom_toBottomOf="@+id/course_select_bar_primary_view"
            app:layout_constraintEnd_toEndOf="@+id/course_select_bar_primary_view"
            app:layout_constraintTop_toTopOf="@+id/course_select_bar_primary_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>