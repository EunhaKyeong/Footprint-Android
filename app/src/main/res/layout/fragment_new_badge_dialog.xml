<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_fragment"
    android:paddingTop="25dp"
    tools:context=".ui.dialog.NewBadgeDialogFragment">

    <ImageView
        android:id="@+id/new_badge_badge_iv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/new_badge_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/new_badge_star1_iv"
        android:layout_width="24dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/new_badge_badge_iv"
        app:layout_constraintTop_toTopOf="@+id/new_badge_badge_iv" />

    <ImageView
        android:id="@+id/new_badge_star2_iv"
        android:layout_width="14dp"
        android:layout_height="19dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/new_badge_star1_iv"
        app:layout_constraintTop_toBottomOf="@+id/new_badge_star1_iv" />

    <ImageView
        android:id="@+id/new_badge_star3_iv"
        android:layout_width="24dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/new_badge_badge_iv"
        app:layout_constraintEnd_toStartOf="@+id/new_badge_badge_iv"
        app:layout_constraintTop_toTopOf="@+id/new_badge_badge_iv" />

    <ImageView
        android:id="@+id/new_badge_star4_iv"
        android:layout_width="14dp"
        android:layout_height="19dp"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/new_badge_badge_iv"
        app:layout_constraintEnd_toStartOf="@+id/new_badge_badge_iv" />

    <TextView
        android:id="@+id/new_badge_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textAppearance="@style/tv_subtitle_b_16"
        app:layout_constraintBottom_toTopOf="@+id/new_badge_message_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/new_badge_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/msg_badge"
        android:textAppearance="@style/tv_overline_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_badge_title_tv" />

    <View
        android:id="@+id/new_badge_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/new_badge_confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/action_confirm"
        android:textAppearance="@style/tv_headline_eb_14"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/new_badge_line_view" />

</androidx.constraintlayout.widget.ConstraintLayout>