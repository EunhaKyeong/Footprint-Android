<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--TabLayout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/register_top_laytout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/register_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@drawable/selector_tablayout_indicator"
            app:tabGravity="center"

            app:tabIndicator="@null"
            app:tabPaddingEnd="5dp"
            app:tabPaddingStart="5dp"
            app:tabRippleColor="@color/transparent"

            app:tabSelectedTextColor="@color/white_light"
            app:tabTextAppearance="@style/tv_body_b_11"
            app:tabTextColor="@color/transparent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--Viewpager: 1. 정보 입력 2. 목표 설정-->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/register_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/register_btn_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_top_laytout" />


    <!--Btn-->
    <TextView
        android:id="@+id/register_btn_tv"
        style="@style/tv_headline_eb_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_start"
        android:elevation="100dp"

        android:gravity="center"
        android:text="@string/action_next"

        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>