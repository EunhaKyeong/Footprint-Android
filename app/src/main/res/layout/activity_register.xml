<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--TabLayout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/register_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/register_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@drawable/selector_tablayout_indicator"
            app:tabGravity="center"

            app:tabIndicator="@null"
            app:tabPaddingEnd="5dp"
            app:tabPaddingStart="5dp"
            app:tabRippleColor="@color/transparent"

            app:tabSelectedTextColor="@color/white_light"
            app:tabTextAppearance="@style/tv_body_b_11"
            app:tabTextColor="@color/transparent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


