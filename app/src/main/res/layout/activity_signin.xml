<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--상단-->
    <ImageView
        android:id="@+id/signin_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signin_login_title_tv"
        style="@style/tv_headline_eb_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_login"
        app:layout_constraintBottom_toBottomOf="@id/signin_back_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signin_back_iv" />

    <!--중간-->
    <ImageView
        android:id="@+id/signin_background_road_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_blueroad_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_login_title_tv"
        app:layout_constraintBottom_toTopOf="@id/signin_description_tv"/>

    <TextView
        style="@style/tv_headline_eb_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_catchphrase"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toTopOf="@id/signin_background_road_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/signin_footprint_union_iv"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:scaleType="center"
        android:layout_marginTop="61dp"
        android:src="@drawable/ic_footprint_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/signin_background_road_iv" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:src="@drawable/ic_footprint_logo_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_footprint_union_iv" />

    <TextView
        android:id="@+id/signin_description_tv"
        style="@style/tv_caption_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/msg_login_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_background_road_iv"
        app:layout_constraintBottom_toTopOf="@id/signin_kakaologin_btn_layout"/>

    <!-- 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signin_kakaologin_btn_layout"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/bg_yellowround"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_description_tv"
        app:layout_constraintBottom_toTopOf="@id/signin_googlelogin_btn_layout">

        <ImageView
            android:id="@+id/signin_kakao_logo_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="59dp"
            android:src="@drawable/ic_kakao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signin_kakao_text_tv"
            style="@style/tv_subtitle_b_16"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/title_kakaologin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/signin_kakao_logo_iv"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signin_googlelogin_btn_layout"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_whitebluelineround"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_kakaologin_btn_layout"
        app:layout_constraintBottom_toTopOf="@id/signin_nologin_tv">

        <ImageView
            android:id="@+id/signin_google_logo_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="59dp"
            android:src="@drawable/ic_google"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signin_google_text_tv"
            style="@style/tv_subtitle_b_16"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/title_googlelogin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/signin_google_logo_iv"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--하단-->
    <TextView
        android:id="@+id/signin_nologin_tv"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:text="@string/msg_nologin"
        android:gravity="center"
        style="@style/tv_caption_12"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/signin_googlelogin_btn_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/signin_copyright_tv"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:text="@string/msg_copyright"
        android:gravity="center"
        style="@style/tv_overline_10"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/signin_nologin_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>