<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypage_top_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/primary"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mypage_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="@+id/mypage_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/mypage_title_tv"/>

        <TextView
            android:id="@+id/mypage_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_mypage"
            style="@style/tv_headline_eb_16"
            app:layout_constraintVertical_bias="0.72"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/mypage_back_iv"
            app:layout_constraintEnd_toStartOf="@id/mypage_search_iv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/mypage_search_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_24"
            app:layout_constraintTop_toTopOf="@id/mypage_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/mypage_title_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mypage_tmp_badge_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="뱃지"
        android:textAppearance="@style/tv_headline_eb_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_top_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>