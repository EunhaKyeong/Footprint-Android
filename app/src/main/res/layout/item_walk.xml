<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:background="@color/white_light"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <ImageView
            android:id="@+id/walk_path_iv"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@drawable/bg_transparent_7_round"
            android:layout_marginStart="13dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/walk_nth_record_tv"
            style="@style/tv_subtitle_b_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="19dp"
            android:text="- 번째 산책"
            app:layout_constraintStart_toEndOf="@id/walk_path_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/walk_time_tv"
            style="@style/tv_overline_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="00:00 ~ 00:00"
            android:textColor="@color/black_light"
            app:layout_constraintStart_toStartOf="@id/walk_nth_record_tv"
            app:layout_constraintTop_toBottomOf="@id/walk_nth_record_tv" />

        <TextView
            android:id="@+id/walk_remove_tv"
            style="@style/tv_headline_eb_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13sp"
            android:layout_marginEnd="14.18dp"
            android:text="@string/action_delete"
            android:textColor="@color/black_light"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/walk_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7.18dp"
            android:src="@drawable/ic_left_6_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/walk_tag_1_tv"
            style="@style/tv_body_b_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="15.03dp"
            android:background="@drawable/bg_gray_round_square"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:textColor="@color/white_light"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/walk_path_iv" />

        <TextView
            android:id="@+id/walk_tag_2_tv"
            style="@style/tv_body_b_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_gray_round_square"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:textColor="@color/white_light"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/walk_tag_1_tv"
            app:layout_constraintStart_toEndOf="@id/walk_tag_1_tv" />

        <TextView
            android:id="@+id/walk_tag_3_tv"
            style="@style/tv_body_b_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_gray_round_square"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:textColor="@color/white_light"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/walk_tag_2_tv"
            app:layout_constraintStart_toEndOf="@id/walk_tag_2_tv" />

        <TextView
            android:id="@+id/walk_tag_4_tv"
            style="@style/tv_body_b_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_gray_round_square"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:textColor="@color/white_light"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/walk_tag_3_tv"
            app:layout_constraintStart_toEndOf="@id/walk_tag_3_tv" />

        <TextView
            android:id="@+id/walk_tag_5_tv"
            style="@style/tv_body_b_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_gray_round_square"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:textColor="@color/white_light"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/walk_tag_4_tv"
            app:layout_constraintStart_toEndOf="@id/walk_tag_4_tv" />

        <View
            android:layout_width="64dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_white_gradient"
            app:layout_constraintBottom_toBottomOf="@id/walk_tag_5_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/walk_left_iv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>