<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="24dp"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/bg_course_share_tag_not_clicked"
    android:paddingHorizontal="8dp">

    <TextView
        android:id="@+id/tag_ver_cs_tag_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="#서울 망원동"
        android:textColor="@color/primary"
        android:textAppearance="@style/tv_caption_12" />

    <ImageView
        android:id="@+id/tag_ver_cs_clear_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tag_ver_cs_tag_tv"
        app:layout_constraintStart_toEndOf="@+id/tag_ver_cs_tag_tv"
        app:layout_constraintTop_toTopOf="@+id/tag_ver_cs_tag_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>