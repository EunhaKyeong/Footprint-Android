<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/walk_top_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/primary"
        android:paddingBottom="18dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/walk_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_cancel"
            style="@style/tv_subtitle_b_16"
            app:layout_constraintTop_toTopOf="@id/walk_help_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/walk_help_iv"/>

        <TextView
            android:id="@+id/walk_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_realtime_record"
            style="@style/tv_headline_eb_16"
            app:layout_constraintTop_toTopOf="@+id/walk_help_iv"
            app:layout_constraintStart_toEndOf="@id/walk_cancel_tv"
            app:layout_constraintEnd_toStartOf="@id/walk_help_iv"
            app:layout_constraintBottom_toBottomOf="@id/walk_help_iv"/>

        <ImageView
            android:id="@+id/walk_help_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/walk_map_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.naver.maps.map.MapFragment"
        app:layout_constraintTop_toBottomOf="@+id/walk_top_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/walk_timer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="23dp"
        android:paddingBottom="13dp"
        android:background="@color/white_light_79"
        app:layout_constraintTop_toTopOf="@+id/walk_map_fragment">

        <TextView
            android:id="@+id/walk_walktime_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_walktime"
            style="@style/tv_body_b_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/walk_walktime_number_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/walk_walktime_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/walk_walktime_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="48dp"
                style="@style/tv_headline_eb_48" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/walk_distance_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="45dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/walk_walktime_number_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/walk_divider1_view">

            <TextView
                android:id="@+id/walk_distance_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_distance"
                style="@style/tv_body_b_12" />

            <TextView
                android:id="@+id/walk_distance_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="8dp"
                android:text="0.0"
                style="@style/tv_headline_eb_24" />

            <TextView
                android:id="@+id/walk_distance_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_distacnce_unit"
                android:textColor="@color/black"
                style="@style/tv_overline_10" />
        </LinearLayout>

        <View
            android:id="@+id/walk_divider1_view"
            android:layout_width="1dp"
            android:layout_height="31dp"
            android:background="@color/white_dark"
            app:layout_constraintTop_toTopOf="@id/walk_distance_layout"
            app:layout_constraintStart_toEndOf="@+id/walk_distance_layout"
            app:layout_constraintEnd_toStartOf="@id/walk_calorie_layout"
            app:layout_constraintBottom_toBottomOf="@id/walk_distance_layout"/>

        <LinearLayout
            android:id="@+id/walk_calorie_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/walk_distance_layout"
            app:layout_constraintStart_toEndOf="@id/walk_divider1_view"
            app:layout_constraintEnd_toStartOf="@+id/walk_divider2_view">

            <TextView
                android:id="@+id/walk_calorie_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_calorie"
                style="@style/tv_body_b_12" />

            <TextView
                android:id="@+id/walk_calorie_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="8dp"
                android:text="0"
                style="@style/tv_headline_eb_24" />

            <TextView
                android:id="@+id/walk_calorie_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_calroie_unit"
                android:textColor="@color/black"
                style="@style/tv_overline_10" />
        </LinearLayout>

        <View
            android:id="@+id/walk_divider2_view"
            android:layout_width="1dp"
            android:layout_height="31dp"
            android:background="@color/white_dark"
            app:layout_constraintTop_toTopOf="@id/walk_calorie_layout"
            app:layout_constraintStart_toEndOf="@+id/walk_calorie_layout"
            app:layout_constraintEnd_toStartOf="@id/walk_pace_layout"
            app:layout_constraintBottom_toBottomOf="@+id/walk_calorie_layout" />

        <LinearLayout
            android:id="@+id/walk_pace_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/walk_distance_layout"
            app:layout_constraintStart_toEndOf="@id/walk_divider2_view"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/walk_pace_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_pace"
                style="@style/tv_body_b_12" />

            <TextView
                android:id="@+id/walk_pace_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="8dp"
                android:text="0"
                style="@style/tv_headline_eb_24" />

            <TextView
                android:id="@+id/walk_pace_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_pace_unit"
                android:textColor="@color/black"
                style="@style/tv_overline_10" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <SeekBar
        android:id="@+id/walk_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white_dark"
        android:max="100"
        android:paddingTop="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:progress="50"
        android:progressDrawable="@drawable/sb_custom"
        android:progressTint="@color/primary"
        android:thumb="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/walk_timer_layout"/>

    <ImageView
        android:id="@+id/walk_stop_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_stop"
        app:layout_constraintTop_toTopOf="@+id/walk_middle_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/walk_middle_iv"
        app:layout_constraintBottom_toBottomOf="@id/walk_middle_iv" />

    <ImageView
        android:id="@+id/walk_middle_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:src="@drawable/btn_pause"
        app:layout_constraintStart_toEndOf="@+id/walk_stop_iv"
        app:layout_constraintEnd_toStartOf="@+id/walk_plus_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/walk_plus_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_plus"
        app:layout_constraintTop_toTopOf="@+id/walk_middle_iv"
        app:layout_constraintStart_toEndOf="@+id/walk_middle_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/walk_middle_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>