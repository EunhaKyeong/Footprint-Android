<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_fragment"
    tools:context=".ui.dialog.TempWalkDialogFragment">

    <TextView
        android:id="@+id/temp_walk_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:text="@string/msg_temp_walk"
        android:textAppearance="@style/tv_headline_eb_16"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/temp_walk_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="38dp"
        android:background="@color/white_dark"
        app:layout_constraintTop_toBottomOf="@+id/temp_walk_msg_tv" />

    <TextView
        android:id="@+id/temp_walk_no_problem_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="@string/action_delete"
        android:textAppearance="@style/tv_headline_eb_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/temp_walk_follow_up_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_walk_line_view" />

    <TextView
        android:id="@+id/temp_walk_follow_up_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="@string/action_follow_up"
        android:textAppearance="@style/tv_headline_eb_14"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temp_walk_no_problem_tv"
        app:layout_constraintTop_toBottomOf="@+id/temp_walk_line_view" />

</androidx.constraintlayout.widget.ConstraintLayout>